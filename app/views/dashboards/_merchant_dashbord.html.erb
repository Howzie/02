<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="user-orders">
				<h2 class="main-heading">Yours Inventory list!</h2>
				<div class="col-xs-12 col-lg-12 col-sm-12 col-md-12">
					<div class="merch-item">
						<div class="table-responsive">
				            <table class="table table-striped">
				                <thead>
				                    <tr>
				                        <th>Item Code</th>
				                        <th>Item Name</th>
				                        <th>Item Specification</th>
				                        <th>Item Price</th>
				                        <th>Item Stock</th>
				                        <th>Item Delivery Days</th>
				                    </tr>
				                </thead>

				                <tbody>
				                    <% @merchant_items.each do |h| %>
			                            <tr>
			                                <td><%= h.code %></td>
			                                <td><%= h.name %></td>
			                                <td><%= h.specification %></td>
			                                <td><%= h.price %></td>
			                                <td><%= h.stock %></td>
			                                <td><%= h.delivery_days %></td>
			                            </tr>
				                    <% end %>
				                </tbody>
				            </table>
				        </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
